<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<routeInfo>
    <nodes>
        <host>localhost</host>
        <port>50030</port>
        <serviceURL>localhost:50030</serviceURL>
        <sid>demo.simple-socket-service</sid>
        <weight>100</weight>
    </nodes>
    <rules>
        <destination>*</destination>
        <srcOp>EQUAL</srcOp>
        <srcProp>IP</srcProp>
        <srcValue>*</srcValue>
        <type>HOST</type>
    </rules>
    <sid>demo.simple-socket-service</sid>
    <strategies>
        <entry>
            <key>FAULT_TOLERANCE</key>
            <value>
                <config>
                    <entry>
                        <key>router.failover.retries</key>
                        <value>4</value>
                    </entry>
                </config>
                <option>FAILOVER</option>
                <type>FAULT_TOLERANCE</type>
            </value>
        </entry>
        <entry>
            <key>LOAD_BALANCE</key>
            <value>
                <config/>
                <option>ROUND_ROBIN</option>
                <type>LOAD_BALANCE</type>
            </value>
        </entry>
        <entry>
            <key>ARBITER</key>
            <value>
                <config>
                    <entry>
                        <key>router.arbite.effective.period</key>
                        <value>300</value>
                    </entry>
                    <entry>
                        <key>router.arbite.effective.times</key>
                        <value>2</value>
                    </entry>
                    <entry>
                        <key>router.arbite.blacklist.period</key>
                        <value>60</value>
                    </entry>
                </config>
                <option>BLACKLIST</option>
                <type>ARBITER</type>
            </value>
        </entry>
    </strategies>
</routeInfo>
